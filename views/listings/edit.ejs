<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-8 offset-1">
        <br />
        <h2>Edit your listing</h2>
        <form method="post" action="/listings/<%= listing.id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="title" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required>
          <%= listing.description %>
        
          </textarea>
          </div>
          <div class="mb-3">
            Current Image <br>
            <img src="<%= listing.image.url %>" style="height: 200px ; width: 200px; border-radius: 20px;">
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Image</label>
            <input type="file" name="listing[image]" value="<%= listing.image.url %>" class="form-control"  />
          </div>
          <div class="row">
            <div class="mb-3 col-4">
              <label for="title" class="form-label">Price</label>
              <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required />
            </div>

            <div class="mb-3 col-8">
              <label for="title" class="form-label">Location</label>
              <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control"
                required />
            </div>
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">College</label>
            <input type="text" name="listing[college]" value="<%= listing.college %>" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Contact number</label>
            <input type="text" name="listing[contact_number]" value="<%= listing.contact_number %>" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="amenities" class="form-label">Amenities</label>
            <input type="text" class="form-control" id="amenities" name="listing[amenities]"
              placeholder="Enter amenities (comma-separated)" required>
            <small class="form-text text-muted">Example: Wi-Fi, Laundry, Meals</small>
          </div>
          <div class="form-group row">
            <div class="col">
              <label for="totalRooms" class="form-label">Total Rooms</label>
              <input type="number" class="form-control" id="totalRooms" name="listing[totalRooms]"
                placeholder="Enter total number of rooms" min="1" required>
            </div>
            <div class="col">
              <label for="occupiedRooms" class="form-label">Occupied Rooms</label>
              <input type="number" class="form-control" id="occupiedRooms" name="listing[occupiedRooms]"
                placeholder="Enter occupied rooms" min="0" required>
            </div>
          </div>
          <br><br><hr>

          <button class="btn btn-success add-btn" style="margin-left: 50%;">Done</button>
        </form>
        <br /><br />
      </div>
    </div>
    <script src="/public/js/script.js"></script>
  </body>